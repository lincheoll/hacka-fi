# =============================================================================
# ROOT PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Production environment variables for Docker Compose orchestration
# Each workspace still needs its own production configuration.
# =============================================================================

# Environment
NODE_ENV=production

# Service Ports
API_PORT=3010
WEB_PORT=3000
DATABASE_PORT=5432
REDIS_PORT=6379

# Database (PostgreSQL in production)
POSTGRES_DB=hacka_fi_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure-password-change-this

# Shared Blockchain Configuration
KAIA_CHAIN_ID=8217
RPC_URL=https://public-en-cypress.klaytn.net

# Deployed Contract Addresses (Production)
HACKATHON_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
PRIZE_POOL_ADDRESS=0x0000000000000000000000000000000000000000

# Cross-Service Configuration
CORS_ORIGIN=https://your-domain.com

# Production Security & Logging
HELMET_ENABLE=true
CORS_CREDENTIALS=true
LOG_LEVEL=info
LOG_FORMAT=json