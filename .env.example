# ==========================================
# Hacka-Fi Project Configuration
# ==========================================

# Database Configuration
DATABASE_URL="file:./dev.db"  # SQLite for development
# DATABASE_URL="postgresql://postgres:password@localhost:5432/hacka_fi"  # PostgreSQL for production
DATABASE_PROVIDER="sqlite"  # sqlite | postgresql | mysql

# Database Connection (for Docker)
POSTGRES_DB=hacka_fi
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_PORT=5432

# API Configuration
NODE_ENV=development
API_PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Frontend Configuration  
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Kaia Blockchain Configuration
KAIA_RPC_URL=https://public-en-kairos.node.kaia.io  # Testnet
# KAIA_RPC_URL=https://public-en.node.kaia.io  # Mainnet
NEXT_PUBLIC_KAIA_CHAIN_ID=1001  # Testnet: 1001, Mainnet: 8217
KAIA_PRIVATE_KEY=your-private-key-here-for-contract-deployment

# Smart Contract Addresses (will be set after deployment)
NEXT_PUBLIC_HACKATHON_REGISTRY_ADDRESS=
NEXT_PUBLIC_PRIZE_POOL_ADDRESS=

# Redis Configuration (optional)
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Docker Environment
COMPOSE_PROJECT_NAME=hacka-fi