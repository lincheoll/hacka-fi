# Environment Configuration
NODE_ENV=development

# Database Configuration
DATABASE_URL=file:./dev.db
POSTGRES_DB=hacka_fi
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_PORT=5432

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Blockchain Configuration
RPC_URL=https://public-en-kairos.node.kaia.io
PRIVATE_KEY=your-private-key-for-deploying-contracts

# Web3 Contract Addresses (Update after deployment)
HACKATHON_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
PRIZE_POOL_ADDRESS=0x0000000000000000000000000000000000000000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_KAIA_CHAIN_ID=1001
NEXT_PUBLIC_HACKATHON_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_PRIZE_POOL_ADDRESS=0x0000000000000000000000000000000000000000

# Service Ports
API_PORT=3001
WEB_PORT=3000
REDIS_PORT=6379

# Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Admin Configuration
ADMIN_WALLET_ADDRESS=your-admin-wallet-address

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100