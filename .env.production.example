# Production Environment Configuration
NODE_ENV=production

# Database Configuration (PostgreSQL in production)
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
POSTGRES_DB=hacka_fi_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure-password-change-this
DATABASE_PORT=5432

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-key-change-this-in-production-at-least-32-chars

# Blockchain Configuration
RPC_URL=https://public-en-kairos.node.kaia.io
PRIVATE_KEY=your-production-private-key-for-deploying-contracts

# Web3 Contract Addresses (Update with actual deployed addresses)
HACKATHON_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
PRIZE_POOL_ADDRESS=0x0000000000000000000000000000000000000000

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_KAIA_CHAIN_ID=8217
NEXT_PUBLIC_HACKATHON_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_PRIZE_POOL_ADDRESS=0x0000000000000000000000000000000000000000

# Service Ports
API_PORT=3001
WEB_PORT=3000
REDIS_PORT=6379

# Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Admin Configuration
ADMIN_WALLET_ADDRESS=your-production-admin-wallet-address

# Redis Configuration
REDIS_URL=redis://redis:6379

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLE=true
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json