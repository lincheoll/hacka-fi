{
  "name": "hacka-fi",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean",
    "setup": "./scripts/setup-env.sh",
    "setup:env": "./scripts/setup-env.sh",
    "validate:env": "./scripts/validate-env.sh",
    "contracts:build": "turbo run contracts:build",
    "contracts:test": "turbo run contracts:test",
    "contracts:deploy": "turbo run contracts:deploy",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "docker:dev": "docker-compose --profile development up",
    "docker:prod": "docker-compose --profile production up",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}