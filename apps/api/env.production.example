# =============================================================================
# API (NESTJS) PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Production environment variables for the NestJS application
# =============================================================================

# Application Configuration
NODE_ENV=production
PORT=3010

# Database Configuration (PostgreSQL in production)
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?schema=public
DATABASE_PROVIDER=postgresql

# JWT Configuration
JWT_SECRET=your-secure-production-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=1d

# Blockchain Configuration (Kaia Mainnet)
RPC_URL=https://public-en-cypress.klaytn.net
CHAIN_ID=8217
HACKATHON_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
PRIZE_POOL_ADDRESS=0x0000000000000000000000000000000000000000

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# Security Configuration
HELMET_ENABLE=true

# Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting (More restrictive in production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Admin Configuration
ADMIN_WALLET_ADDRESS=your-production-admin-wallet-address

# Redis Configuration
REDIS_URL=redis://redis:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring (Optional)
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key